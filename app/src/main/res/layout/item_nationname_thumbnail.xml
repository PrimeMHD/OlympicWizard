<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/textView_NationCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="国家代码"
        />
<TextView
    android:id="@+id/textView_NationName"
    android:layout_toEndOf="@id/textView_NationCode"
    android:layout_alignParentTop="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:text="国家名"
    />
    <Button
        android:id="@+id/button_remove_nation"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/textView_NationName"
        android:layout_toEndOf="@id/textView_NationName"
        android:text="删除"
        />

</RelativeLayout>
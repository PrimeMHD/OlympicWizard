<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="3dp"
    android:background="@color/contentRed"
    android:layout_margin="5dp"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/textView_NationCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_centerVertical="true"
        android:textSize="18sp"
        android:textColor="@color/colorWhiteBackground"
        android:text="国家代码"
        />

    <TextView
        android:id="@+id/textView_NationName"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="110dp"
        android:layout_toEndOf="@id/textView_NationCode"
        android:textSize="18sp"
        android:textColor="@color/colorWhiteBackground"
        android:text="国家名" />

    <Button
        android:id="@+id/button_remove_nation"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"
        android:text="删除"
        android:background="@drawable/cirsquare_button"
        android:textStyle="bold"
        />

</RelativeLayout>